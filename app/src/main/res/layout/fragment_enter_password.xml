<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="14.69dp"
            android:layout_marginEnd="19.69dp"
            android:layout_gravity="end"
            android:background="#00000000"
            android:clickable="true"
            android:contentDescription="@string/icon_close"
            android:src="@drawable/icon_close_auth" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="57dp"
            android:fontFamily="@font/gotham_pro"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="20dp"
            android:lineSpacingExtra="5sp"
            android:text="@string/authorization_title_1"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:targetApi="p" />



        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/gotham_pro"
            android:lineHeight="24dp"
            android:lineSpacingExtra="5sp"
            android:text="@string/sign_in_title"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="20sp"
            android:textStyle="normal"
            android:translationY="-2.43sp"
            tools:targetApi="p" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:contentDescription="@string/circle1"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/imageview_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:contentDescription="@string/circle1"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/imageview_circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:contentDescription="@string/circle1"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/imageview_circle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:contentDescription="@string/circle1"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/imageview_circle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:contentDescription="@string/circle1"
                android:src="@drawable/circle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="5"
            android:visibility="visible"
            tools:ignore="TextFields" />
    </LinearLayout>
</LinearLayout>



